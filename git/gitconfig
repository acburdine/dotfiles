[core]
	excludesfile = ~/.config/git/gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX

[hub]
	protocol = https

[push]
  default = current

[commit]
  gpgsign = true

[interactive]
  diffFilter = diff-so-fancy --patch
